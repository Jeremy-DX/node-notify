{
  "compilerOptions": {
    "target": "es5",
    "rootDir": "src",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "lib": [
      "es5",
      "dom"
    ],
    "types": [
      "node"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  // "exclude": [
  //   "node_modules",
  //   "**/*.spec.ts"
  // ],
  "typeRoots": [
    "node_modules/@types",
    "types"
  ]
}
